<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- 标题栏 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFA500"
        android:paddingTop="@dimen/title_padding_top"
        android:paddingBottom="@dimen/title_padding_bottom"
        android:gravity="center"
        android:text="ANDROID APP"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/title_text_size"
        android:textStyle="bold" />

    <!-- 用户名输入框 -->
    <EditText
        android:id="@+id/et_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/input_margin_top"
        android:background="@drawable/edittext_underline"
        android:backgroundTint="@color/edittext_bg"
        android:hint="Username"
        android:inputType="text"
        android:paddingHorizontal="@dimen/input_padding_horizontal"
        android:textSize="@dimen/input_text_size" />

    <!-- 密码输入框 -->
    <EditText
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/input_margin_between"
        android:background="@drawable/edittext_underline"
        android:backgroundTint="@color/edittext_bg"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingHorizontal="@dimen/input_padding_horizontal"
        android:textSize="@dimen/input_text_size" />

    <!-- 按钮区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/button_area_margin_top"
        android:orientation="horizontal">

        <!-- 取消按钮 -->
        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_border"
            android:padding="@dimen/button_padding"
            android:text="Cancel"
            android:textAllCaps="false"
            android:textColor="#8A8A8A"
            android:textSize="@dimen/button_text_size" />

        <!-- 登录按钮 -->
        <Button
            android:id="@+id/btn_signin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_border"
            android:padding="@dimen/button_padding"
            android:text="Sign in"
            android:textAllCaps="false"
            android:textColor="#8A8A8A"
            android:textSize="@dimen/button_text_size" />

    </LinearLayout>

</LinearLayout>